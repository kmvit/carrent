<!-- Модальное окно для бронирования -->
<div id="bookingModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-gray-800 rounded-lg p-8 max-w-md w-full relative">
            <button id="closeModal" class="absolute top-4 right-4 text-gray-400 hover:text-white">
                <i class="fas fa-times text-xl"></i>
            </button>
            <h3 class="text-2xl font-bold mb-6 gold-text">Бронирование автомобиля</h3>
            <form id="bookingForm" class="space-y-4">
                <input type="hidden" id="carId" name="carId">
                <div>
                    <label class="block text-gray-400 mb-2 text-sm md:text-base">Имя</label>
                    <input type="text" name="name" required 
                        class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:border-[#e8b98b] text-white">
                </div>
                <div>
                    <label class="block text-gray-400 mb-2 text-sm md:text-base">Телефон</label>
                    <input type="tel" name="phone" required 
                        class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:border-[#e8b98b] text-white">
                </div>
                <button type="submit" 
                    class="w-full bg-[#e8b98b] text-gray-900 py-3 rounded-lg font-semibold hover:bg-[#d4a87a] transition">
                    Отправить заявку
                </button>
            </form>
        </div>
    </div>
</div> 